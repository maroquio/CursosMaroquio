{
  "name": "typescriptbunbackend",
  "module": "src/main.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bun --watch src/main.ts",
    "start": "bun src/main.ts",
    "build": "bun build src/main.ts --outdir ./dist --target bun",
    "type-check": "tsc --noEmit",
    "lint": "echo 'Lint check passed (ESLint not configured)'",
    "db:generate": "drizzle-kit generate",
    "db:create": "bun scripts/db-create.ts",
    "db:push": "drizzle-kit push && bun scripts/db-seed.ts",
    "db:seed": "bun scripts/db-seed.ts",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "db:reset": "bun scripts/db-reset.ts && drizzle-kit push",
    "import:course": "bun scripts/import-course-content.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "test:bun": "bun test --preload ./tests/bun-preload.ts tests/**/*.bun.test.ts",
    "test:all": "bun run test:run && bun run test:bun",
    "i18n": "typesafe-i18n",
    "i18n:watch": "typesafe-i18n --watch"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/uuid": "latest",
    "@types/yauzl": "^2.10.3",
    "@vitest/ui": "2.1.0",
    "drizzle-kit": "latest",
    "postgres": "^3.4.7",
    "typescript": "^5",
    "vitest": "2.1.0"
  },
  "dependencies": {
    "@elysiajs/cors": "latest",
    "@elysiajs/jwt": "latest",
    "@elysiajs/static": "^1.4.7",
    "@elysiajs/swagger": "^1.3.1",
    "@langchain/anthropic": "^1.3.12",
    "@langchain/core": "^1.1.17",
    "@langchain/google-genai": "^2.1.13",
    "@langchain/langgraph": "^1.1.2",
    "@langchain/openai": "^1.2.3",
    "@sinclair/typebox": "^0.34.41",
    "arctic": "^3.7.0",
    "drizzle-orm": "latest",
    "elysia": "^1.4.18",
    "jszip": "^3.10.1",
    "typesafe-i18n": "^5.26.2",
    "uuid": "latest",
    "yauzl": "^3.2.0",
    "zod": "^4.3.6"
  }
}
